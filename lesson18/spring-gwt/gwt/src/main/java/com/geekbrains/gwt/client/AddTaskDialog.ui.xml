<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:DecoratorPanel>
        <g:DialogBox ui:field="dialog">
            <g:FormPanel ui:field="form" method="POST">
                <g:VerticalPanel spacing="10">
                    <g:HorizontalPanel>
                        <g:Label text="Название:" width="100px"/>
                        <g:TextBox name="name" ui:field="name"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label text="Автор:" width="100px"/>
                        <g:ListBox name="author_id" ui:field="author_id">
                        </g:ListBox>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label text="Исполнитель:" width="100px"/>
                        <g:ListBox name="executor_id" ui:field="executor_id">
                        </g:ListBox>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label text="Описание:" width="100px"/>
                        <g:TextBox name="description" ui:field="description"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Button ui:field="btnSubmit">Создать</g:Button>
                        <g:Button ui:field="btnCancel">Отмена</g:Button>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:FormPanel>
        </g:DialogBox>
    </g:DecoratorPanel>
</ui:UiBinder>