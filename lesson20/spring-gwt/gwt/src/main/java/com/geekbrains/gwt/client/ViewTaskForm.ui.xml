<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:DecoratorPanel>
            <g:VerticalPanel spacing="10">
                <g:HorizontalPanel>
                    <g:Button ui:field="btnRemove">Удалить задачу</g:Button>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Тема:" width="100px"/>
                    <g:Label ui:field="name"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Статус:" width="100px"/>
                    <g:Label ui:field="statusName"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Исполнитель:" width="100px"/>
                    <g:Label ui:field="executor_name">
                    </g:Label>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Автор:" width="100px"/>
                    <g:Label ui:field="author_name">
                    </g:Label>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Описание:" width="100px"/>
                    <g:Label ui:field="description"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Button ui:field="btnCancel">Назад</g:Button>
                    <g:Button ui:field="btnEditTask">Редактировать</g:Button>
                </g:HorizontalPanel>
            </g:VerticalPanel>
    </g:DecoratorPanel>
</ui:UiBinder>